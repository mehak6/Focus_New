<Window x:Class="FocusVoucherSystem.Views.SimpleMergeVehiclesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Merge Vehicles/Accounts"
        Height="450" Width="800" MinWidth="700" MinHeight="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#f7fafc" BorderBrush="#e2e8f0" BorderThickness="0,0,0,1" Padding="20,15">
            <StackPanel>
                <TextBlock Text="MERGE VEHICLES/ACCOUNTS" FontSize="16" FontWeight="Bold" Foreground="#2d3748" Margin="0,0,0,10"/>
                <TextBlock Text="Transfer all vouchers from one vehicle to another and delete the source vehicle"
                          FontSize="12" Foreground="#718096"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Source Vehicle Selection -->
            <TextBlock Grid.Row="0" Text="1. Select Source Vehicle (will be deleted after merge):"
                      FontWeight="Bold" FontSize="14" Foreground="#2d3748" Margin="0,0,0,10"/>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Source Vehicle:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                <Grid Grid.Column="1">
                    <!-- Source vehicle search textbox -->
                    <TextBox x:Name="SourceSearchTextBox"
                             Height="30" VerticalContentAlignment="Center" Padding="8,5"
                             BorderBrush="#cbd5e0" BorderThickness="1"
                             ToolTip="Type to search vehicles"
                             TextChanged="SourceSearchTextBox_TextChanged"
                             PreviewKeyDown="SourceSearchTextBox_PreviewKeyDown"
                             KeyDown="SourceSearchTextBox_KeyDown"/>

                    <!-- Source suggestions popup -->
                    <Popup x:Name="SourceSuggestionsPopup"
                           PlacementTarget="{Binding ElementName=SourceSearchTextBox}"
                           Placement="Bottom"
                           StaysOpen="False"
                           AllowsTransparency="True"
                           Focusable="False"
                           Closed="SourceSuggestionsPopup_Closed">
                        <Border BorderBrush="#cbd5e0" BorderThickness="1" Background="White"
                                Width="{Binding ElementName=SourceSearchTextBox, Path=ActualWidth}">
                            <ListBox x:Name="SourceSuggestionsList"
                                     Background="Transparent" BorderThickness="0"
                                     PreviewKeyDown="SourceSuggestionsList_PreviewKeyDown"
                                     KeyDown="SourceSuggestionsList_KeyDown"
                                     MaxHeight="200"
                                     MouseDoubleClick="SourceSuggestionsList_MouseDoubleClick"/>
                        </Border>
                    </Popup>
                </Grid>
            </Grid>

            <!-- Target Vehicle Selection -->
            <TextBlock Grid.Row="3" Text="2. Select Target Vehicle (will receive all vouchers):"
                      FontWeight="Bold" FontSize="14" Foreground="#2d3748" Margin="0,0,0,10"/>

            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Target Vehicle:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                <Grid Grid.Column="1">
                    <!-- Target vehicle search textbox -->
                    <TextBox x:Name="TargetSearchTextBox"
                             Height="30" VerticalContentAlignment="Center" Padding="8,5"
                             BorderBrush="#cbd5e0" BorderThickness="1"
                             ToolTip="Type to search vehicles"
                             TextChanged="TargetSearchTextBox_TextChanged"
                             PreviewKeyDown="TargetSearchTextBox_PreviewKeyDown"
                             KeyDown="TargetSearchTextBox_KeyDown"/>

                    <!-- Target suggestions popup -->
                    <Popup x:Name="TargetSuggestionsPopup"
                           PlacementTarget="{Binding ElementName=TargetSearchTextBox}"
                           Placement="Bottom"
                           StaysOpen="False"
                           AllowsTransparency="True"
                           Focusable="False"
                           Closed="TargetSuggestionsPopup_Closed">
                        <Border BorderBrush="#cbd5e0" BorderThickness="1" Background="White"
                                Width="{Binding ElementName=TargetSearchTextBox, Path=ActualWidth}">
                            <ListBox x:Name="TargetSuggestionsList"
                                     Background="Transparent" BorderThickness="0"
                                     PreviewKeyDown="TargetSuggestionsList_PreviewKeyDown"
                                     KeyDown="TargetSuggestionsList_KeyDown"
                                     MaxHeight="200"
                                     MouseDoubleClick="TargetSuggestionsList_MouseDoubleClick"/>
                        </Border>
                    </Popup>
                </Grid>
            </Grid>

            <!-- Summary -->
            <Border Grid.Row="6" x:Name="SummaryBorder" Background="#e6fffa" BorderBrush="#81e6d9" BorderThickness="2"
                   CornerRadius="5" Padding="15" Visibility="Collapsed">
                <StackPanel>
                    <TextBlock Text="MERGE SUMMARY:" FontWeight="Bold" FontSize="12" Foreground="#2c7a7b" Margin="0,0,0,5"/>
                    <TextBlock x:Name="SummaryText" FontSize="11" Foreground="#285e61" TextWrapping="Wrap" MaxWidth="740"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Buttons -->
        <Border Grid.Row="2" Background="#edf2f7" BorderBrush="#cbd5e0" BorderThickness="0,1,0,0" Padding="20,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel" Height="35" Padding="20,8" Margin="5,0" FontWeight="SemiBold"
                       Background="#e2e8f0" Foreground="#2d3748" BorderBrush="#cbd5e0" BorderThickness="1"
                       Click="Cancel_Click"/>
                <Button x:Name="MergeButton" Content="ðŸ”„ Merge Vehicles" Height="35" Padding="20,8" Margin="5,0" FontWeight="SemiBold"
                       Background="#e53e3e" Foreground="White" BorderBrush="#c53030" BorderThickness="1"
                       Click="Merge_Click" IsEnabled="False"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>