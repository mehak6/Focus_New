<Window x:Class="FocusVoucherSystem.Views.MergeVehiclesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Merge Vehicles/Accounts"
        Height="550" Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2d3748"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="MinWidth" Value="120"/>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#4299e1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3182ce"/>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#e2e8f0"/>
            <Setter Property="Foreground" Value="#2d3748"/>
            <Setter Property="BorderBrush" Value="#cbd5e0"/>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#e53e3e"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#c53030"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#f7fafc" BorderBrush="#e2e8f0" BorderThickness="0,0,0,1" Padding="20,15">
            <StackPanel>
                <TextBlock Text="MERGE VEHICLES/ACCOUNTS" Style="{StaticResource HeaderTextStyle}"/>
                <TextBlock Text="Transfer all vouchers from one vehicle to another and delete the source vehicle"
                          FontSize="12" Foreground="#718096"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Source Vehicle Selection -->
            <TextBlock Grid.Row="0" Text="1. Select Source Vehicle (will be deleted after merge):"
                      FontWeight="Bold" FontSize="14" Foreground="#2d3748" Margin="0,0,0,10"/>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Source Vehicle:" Style="{StaticResource LabelStyle}"/>
                <ComboBox Grid.Column="1"
                         ItemsSource="{Binding AvailableVehicles}"
                         SelectedItem="{Binding SourceVehicle}"
                         DisplayMemberPath="DisplayText"
                         Height="30"
                         VerticalContentAlignment="Center"/>
            </Grid>

            <!-- Target Vehicle Selection -->
            <TextBlock Grid.Row="3" Text="2. Select Target Vehicle (will receive all vouchers):"
                      FontWeight="Bold" FontSize="14" Foreground="#2d3748" Margin="0,0,0,10"/>

            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Target Vehicle:" Style="{StaticResource LabelStyle}"/>
                <ComboBox Grid.Column="1"
                         ItemsSource="{Binding TargetVehicles}"
                         SelectedItem="{Binding TargetVehicle}"
                         DisplayMemberPath="DisplayText"
                         Height="30"
                         VerticalContentAlignment="Center"/>
            </Grid>

            <!-- Warning Message -->
            <Border Grid.Row="6" Background="#fed7d7" BorderBrush="#f56565" BorderThickness="2"
                   CornerRadius="5" Padding="15" Margin="0,10,0,0">
                <StackPanel>
                    <TextBlock Text="âš ï¸ WARNING" FontWeight="Bold" FontSize="14" Foreground="#c53030" Margin="0,0,0,5"/>
                    <TextBlock TextWrapping="Wrap" FontSize="12" Foreground="#742a2a">
                        <Run Text="This operation will:"/>
                        <LineBreak/>
                        <Run Text="â€¢ Transfer ALL vouchers from the source vehicle to the target vehicle"/>
                        <LineBreak/>
                        <Run Text="â€¢ Permanently DELETE the source vehicle"/>
                        <LineBreak/>
                        <Run Text="â€¢ This action CANNOT be undone"/>
                        <LineBreak/>
                        <LineBreak/>
                        <Run Text="Please double-check your selection before proceeding."/>
                    </TextBlock>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Summary (when both vehicles selected) -->
        <Border Grid.Row="2" Background="#e6fffa" BorderBrush="#81e6d9" BorderThickness="0,1,0,1"
               Padding="20,10"
               Visibility="{Binding ShowSummary, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel>
                <TextBlock Text="MERGE SUMMARY:" FontWeight="Bold" FontSize="12" Foreground="#2c7a7b" Margin="0,0,0,5"/>
                <TextBlock FontSize="11" Foreground="#285e61">
                    <Run Text="Source: "/>
                    <Run Text="{Binding SourceVehicle.Vehicle.VehicleNumber}" FontWeight="Bold"/>
                    <Run Text=" ("/>
                    <Run Text="{Binding SourceVehicleVoucherCount}"/>
                    <Run Text=" vouchers, Balance: "/>
                    <Run Text="{Binding SourceVehicle.Vehicle.FormattedBalance}" FontWeight="Bold"/>
                    <Run Text=")"/>
                    <LineBreak/>
                    <Run Text="Target: "/>
                    <Run Text="{Binding TargetVehicle.Vehicle.VehicleNumber}" FontWeight="Bold"/>
                    <Run Text=" ("/>
                    <Run Text="{Binding TargetVehicleVoucherCount}"/>
                    <Run Text=" vouchers, Balance: "/>
                    <Run Text="{Binding TargetVehicle.Vehicle.FormattedBalance}" FontWeight="Bold"/>
                    <Run Text=")"/>
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <Border Grid.Row="3" Background="#edf2f7" BorderBrush="#cbd5e0" BorderThickness="0,1,0,0" Padding="20,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel" Style="{StaticResource SecondaryButtonStyle}" Click="Cancel_Click"/>
                <Button Content="ðŸ”„ Merge Vehicles"
                       Style="{StaticResource DangerButtonStyle}"
                       Click="Merge_Click"
                       IsEnabled="{Binding CanMerge}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>