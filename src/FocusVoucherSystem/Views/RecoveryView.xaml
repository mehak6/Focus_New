<UserControl x:Class="FocusVoucherSystem.Views.RecoveryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:FocusVoucherSystem"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1200">

    <UserControl.Resources>
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2d3748"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>

        <Style x:Key="InputStyle" TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderBrush" Value="#cbd5e0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#4299e1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3182ce"/>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#e2e8f0"/>
            <Setter Property="Foreground" Value="#2d3748"/>
            <Setter Property="BorderBrush" Value="#cbd5e0"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#f7fafc" BorderBrush="#e2e8f0" BorderThickness="0,0,0,1" Padding="20,15">
            <StackPanel>
                <TextBlock Text="RECOVERY STATEMENT" Style="{StaticResource HeaderTextStyle}"/>
                <TextBlock Text="Find vehicles with positive balance and no debit/credit transactions within specified days" FontSize="12" Foreground="#718096"/>
            </StackPanel>
        </Border>

        <!-- Controls -->
        <Border Grid.Row="1" Background="White" BorderBrush="#e2e8f0" BorderThickness="0,0,0,1" Padding="20,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Days:" Style="{StaticResource LabelStyle}" FontSize="14"/>
                <TextBox Grid.Column="1" Text="{Binding Days, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource InputStyle}" TextAlignment="Center"
                         ToolTip="Number of days to check for vehicles with positive balance and no debit/credit transactions"/>

                <StackPanel Grid.Column="3" Orientation="Horizontal">
                    <Button Content="GENERATE" Command="{Binding GenerateRecoveryCommand}"
                            Style="{StaticResource PrimaryButtonStyle}" Width="120"/>
                    <Button Content="CLEAR" Command="{Binding ClearCommand}"
                            Style="{StaticResource SecondaryButtonStyle}" Width="90"/>
                    <Button Content="EXPORT CSV" Command="{Binding ExportCommand}"
                            Style="{StaticResource SecondaryButtonStyle}" Width="120"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Results -->
        <Border Grid.Row="2" Background="White" BorderBrush="#e2e8f0" BorderThickness="0,0,0,1" Margin="0">
            <DataGrid ItemsSource="{Binding RecoveryItems}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column"
                      AlternationCount="2"
                      AlternatingRowBackground="#fafbfc"
                      Background="White"
                      BorderThickness="0"
                      RowHeight="35"
                      FontSize="13"
                      SelectionMode="Single"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto">

                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#f1f3f4"/>
                        <Setter Property="BorderBrush" Value="#dee2e6"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="FontSize" Value="13"/>
                        <Setter Property="Foreground" Value="#495057"/>
                        <Setter Property="Padding" Value="12,8"/>
                        <Setter Property="Height" Value="40"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="8,4"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#e3f2fd"/>
                                <Setter Property="Foreground" Value="#1976d2"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.CellStyle>

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="BorderBrush" Value="#f0f0f0"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#f8f9fa"/>
                            </Trigger>
                            <!-- Style for group header rows -->
                            <DataTrigger Binding="{Binding IsGroupHeader}" Value="True">
                                <Setter Property="Background" Value="#e2e8f0"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="BorderThickness" Value="0,2,0,2"/>
                                <Setter Property="BorderBrush" Value="#4299e1"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Vehicle Number" Binding="{Binding VehicleNumber}" Width="250" IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="FontSize" Value="13"/>
                                <Setter Property="Foreground" Value="#2d3748"/>
                                <Setter Property="Padding" Value="8,6"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Style.Triggers>
                                    <!-- Special styling for group headers -->
                                    <DataTrigger Binding="{Binding IsGroupHeader}" Value="True">
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="FontSize" Value="14"/>
                                        <Setter Property="Foreground" Value="#1a365d"/>
                                        <Setter Property="TextAlignment" Value="Center"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Last Amount" Width="120" IsReadOnly="True">
                        <DataGridTextColumn.Binding>
                            <Binding Path="LastAmount" StringFormat="₹{0:N2}"/>
                        </DataGridTextColumn.Binding>
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontSize" Value="13"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="TextAlignment" Value="Right"/>
                                <Setter Property="Foreground" Value="#2d3748"/>
                                <Setter Property="Padding" Value="8,6"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Last Date" Width="120" IsReadOnly="True">
                        <DataGridTextColumn.Binding>
                            <Binding Path="LastDate" StringFormat="{}{0:dd/MM/yyyy}" TargetNullValue="Never"/>
                        </DataGridTextColumn.Binding>
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontSize" Value="13"/>
                                <Setter Property="TextAlignment" Value="Center"/>
                                <Setter Property="Foreground" Value="#4a5568"/>
                                <Setter Property="Padding" Value="8,6"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Remaining Balance" Width="140" IsReadOnly="True">
                        <DataGridTextColumn.Binding>
                            <Binding Path="RemainingBalance" StringFormat="₹{0:N2}"/>
                        </DataGridTextColumn.Binding>
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontSize" Value="13"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="TextAlignment" Value="Right"/>
                                <Setter Property="Padding" Value="8,6"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Foreground" Value="#2d3748"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Status" Binding="{Binding CreditStatus}" Width="*" IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontSize" Value="13"/>
                                <Setter Property="FontWeight" Value="Medium"/>
                                <Setter Property="Padding" Value="8,6"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HasCredits}" Value="False">
                                        <Setter Property="Foreground" Value="#e53e3e"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding HasCredits}" Value="True">
                                        <Setter Property="Foreground" Value="#d69e2e"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Status -->
        <Border Grid.Row="3" Background="#edf2f7" BorderBrush="#cbd5e0" BorderThickness="0,1,0,0" Padding="20,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="{Binding StatusMessage}" VerticalAlignment="Center" FontSize="13" FontWeight="Medium"/>
                
                <TextBlock Grid.Column="1" VerticalAlignment="Center" FontSize="13">
                    <Run Text="Total Vehicles: "/>
                    <Run Text="{Binding TotalVehicles}" FontWeight="Bold"/>
                </TextBlock>
            </Grid>
        </Border>
    </Grid>
</UserControl>