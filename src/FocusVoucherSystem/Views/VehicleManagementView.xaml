<UserControl x:Class="FocusVoucherSystem.Views.VehicleManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:FocusVoucherSystem"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    
    <UserControl.Resources>
        <!-- Styles -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2d3748"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="MinWidth" Value="100"/>
        </Style>
        
        <Style x:Key="InputStyle" TargetType="TextBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="BorderBrush" Value="#cbd5e0"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        
        <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#4299e1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3182ce"/>
        </Style>
        
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#e2e8f0"/>
            <Setter Property="Foreground" Value="#2d3748"/>
            <Setter Property="BorderBrush" Value="#cbd5e0"/>
        </Style>
        
        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#e53e3e"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#c53030"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#f7fafc" BorderBrush="#e2e8f0" BorderThickness="0,0,0,1" Padding="20,15">
            <StackPanel>
                <TextBlock Text="ðŸš— Vehicle Management" Style="{StaticResource HeaderTextStyle}"/>
                <TextBlock Text="Manage vehicles and accounts for voucher entries" 
                          FontSize="12" Foreground="#718096"/>
            </StackPanel>
        </Border>
        
        <!-- Search Bar -->
        <Border Grid.Row="1" Background="White" BorderBrush="#e2e8f0" BorderThickness="0,0,0,1" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="ðŸ” Search:" Style="{StaticResource LabelStyle}"/>
                <TextBox Grid.Column="1" x:Name="SearchBox" 
                         Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource InputStyle}" 
                         ToolTip="Search by vehicle number or description"/>
                
                <Button Grid.Column="3" Content="Clear" Command="{Binding ClearSearchCommand}" 
                        Style="{StaticResource SecondaryButtonStyle}" Width="80"/>
                
                <StackPanel Grid.Column="5" Orientation="Horizontal">
                    <Button Content="âž• Add Vehicle" Command="{Binding AddVehicleCommand}" 
                            Style="{StaticResource PrimaryButtonStyle}"/>
                    <Button Content="ðŸ”„ Refresh" Command="{Binding RefreshDataCommand}" 
                            Style="{StaticResource SecondaryButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Vehicle Edit Form -->
        <Border Grid.Row="2" Background="#fafafa" BorderBrush="#e2e8f0" BorderThickness="0,0,0,1" Padding="20"
                Visibility="{Binding IsEditMode, Converter={x:Static local:Converters.BooleanToVisibilityConverter}}">
            <StackPanel>
                <TextBlock Text="Vehicle Information" FontWeight="Bold" FontSize="14" Margin="0,0,0,15"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="Vehicle Number:" Style="{StaticResource LabelStyle}"/>
                    <TextBox Grid.Column="1" Text="{Binding CurrentVehicle.VehicleNumber, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource InputStyle}"/>
                    
                    <TextBlock Grid.Column="3" Text="Description:" Style="{StaticResource LabelStyle}"/>
                    <TextBox Grid.Column="4" Text="{Binding CurrentVehicle.Description, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource InputStyle}"/>
                    
                    <StackPanel Grid.Column="6" Orientation="Horizontal">
                        <Button Content="ðŸ’¾ Save" Command="{Binding SaveVehicleCommand}" 
                                Style="{StaticResource PrimaryButtonStyle}"/>
                        <Button Content="âŒ Cancel" Command="{Binding CancelEditCommand}" 
                                Style="{StaticResource SecondaryButtonStyle}"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>
        
        <!-- Vehicle DataGrid -->
        <DataGrid Grid.Row="3" 
                  ItemsSource="{Binding Vehicles}" 
                  SelectedItem="{Binding SelectedVehicle}"
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  AlternationCount="2"
                  AlternatingRowBackground="#f8f9fa"
                  SelectionMode="Single">
            
            <DataGrid.Columns>
                <DataGridTextColumn Header="Vehicle Number" Binding="{Binding VehicleNumber}" Width="150" IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Foreground" Value="#2d3748"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*" IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="#4a5568"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                
                <DataGridTextColumn Header="Balance" Binding="{Binding DisplayName}" Width="120" IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Text" Value="â‚¹0.00"/>
                            <Setter Property="TextAlignment" Value="Right"/>
                            <Setter Property="FontFamily" Value="Consolas"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                
                <DataGridTextColumn Header="Last Transaction" Width="120" IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Text" Value="-"/>
                            <Setter Property="TextAlignment" Value="Center"/>
                            <Setter Property="Foreground" Value="#718096"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                
                <DataGridTemplateColumn Header="Status" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding IsActive, Converter={x:Static local:Converters.BooleanToActiveStatusConverter}}" 
                                       TextAlignment="Center"
                                       FontWeight="SemiBold"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                
                <DataGridTemplateColumn Header="Actions" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="ðŸ“" Command="{Binding DataContext.EditVehicleCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}" ToolTip="Edit Vehicle" 
                                        Width="30" Height="25" FontSize="12" Margin="2,0"/>
                                <Button Content="ðŸ—‘ï¸" Command="{Binding DataContext.DeleteVehicleCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}" ToolTip="Delete Vehicle"
                                        Width="30" Height="25" FontSize="12" Margin="2,0"
                                        Background="#e53e3e" Foreground="White" BorderBrush="#c53030"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        
        <!-- Status Bar -->
        <Border Grid.Row="4" Background="#edf2f7" BorderBrush="#cbd5e0" BorderThickness="0,1,0,0" Padding="15,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="{Binding StatusMessage}" VerticalAlignment="Center" FontSize="12"/>
                
                <TextBlock Grid.Column="1" Margin="0,0,20,0" VerticalAlignment="Center" FontSize="12">
                    <Run Text="Total Vehicles: "/>
                    <Run Text="{Binding TotalVehicles}" FontWeight="Bold"/>
                </TextBlock>
                
                <TextBlock Grid.Column="2" Margin="0,0,20,0" VerticalAlignment="Center" FontSize="12">
                    <Run Text="Active: "/>
                    <Run Text="{Binding ActiveVehicles}" FontWeight="Bold" Foreground="Green"/>
                </TextBlock>
                
                <TextBlock Grid.Column="3" VerticalAlignment="Center" FontSize="12">
                    <Run Text="Selected: "/>
                    <Run Text="{Binding SelectedVehicle.DisplayName}" FontWeight="Bold"/>
                </TextBlock>
            </Grid>
        </Border>
    </Grid>
</UserControl>